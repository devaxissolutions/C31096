# Environment Variables Example
# Copy this file to .env.local and fill in your actual values

# API Configuration
VITE_API_BASE_URL=https://api.editpharma.com
VITE_CONTACT_API_URL=https://api.editpharma.com/contact

# Analytics (Optional)
VITE_GOOGLE_ANALYTICS_ID=GA_MEASUREMENT_ID
VITE_HOTJAR_ID=your_hotjar_id

# Email Service (for contact forms)
VITE_EMAILJS_SERVICE_ID=your_service_id
VITE_EMAILJS_TEMPLATE_ID=your_template_id
VITE_EMAILJS_PUBLIC_KEY=your_public_key

# Social Media Links
VITE_LINKEDIN_URL=https://linkedin.com/company/editpharma
VITE_TWITTER_URL=https://twitter.com/editpharma
VITE_FACEBOOK_URL=https://facebook.com/editpharma

# Company Information
VITE_COMPANY_NAME="EDIF Pharma"
VITE_COMPANY_EMAIL=info@editpharma.com
VITE_COMPANY_PHONE=+1-XXX-XXX-XXXX

# Feature Flags (Optional)
VITE_ENABLE_ANALYTICS=true
VITE_ENABLE_HOTJAR=false
VITE_MAINTENANCE_MODE=false